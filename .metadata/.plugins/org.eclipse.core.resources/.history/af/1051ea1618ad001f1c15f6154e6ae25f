#ifndef INC_TETRIS_LOGIC_H_
#define INC_TETRIS_LOGIC_H_

#include <stdio.h>

#include "LCD_Driver.h"

#define X 1
#define U 0

#define O 0
#define I 1
#define S 2
#define Z 3
#define J 4
#define L 5
#define T 6

#define MAXWIDTH  3
#define IBLOCK_MW 4
#define OBLOCK_MW 2

#define START_POSITION_X 4
#define START_POSITION_Y 11

#define BOARD_WIDTH  10
#define BOARD_LENGTH 12

#define DOWN   0
#define LEFT   1
#define RIGHT  2





typedef struct {

	uint8_t Name;

	uint8_t Structure[4][4];

	uint16_t Color;

	uint8_t MaxWidth;

	uint8_t XPosition;

	uint8_t YPosition;

} Tetrominoe ;



Tetrominoe BuildTetrominoe(uint8_t c);
void RotateTetrominoe(Tetrominoe tetrominoe);




#endif /* INC_TETRIS_LOGIC_H_ */
