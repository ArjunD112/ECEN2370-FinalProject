#include "RNG_Driver.h"

RNG_HandleTypeDef hrng;


uint32_t randNum;



void RNG_Init(){

	hrng.Instance = RNG;
	HAL_RNG_Init(&hrng);

}


uint32_t RNG_GenRandNum(){

	HAL_RNG_GenerateRandomNumber(&hrng, &randNum);

	uint32_t rn = 9;

	while(rn == 9){
		rn = (randNum >> 29) + 2;
	}

	return rn;

}

