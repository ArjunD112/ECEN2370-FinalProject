RNG_HandleTypeDef hrng;


uint32_t randNum;



void RNG_Init(){

	hrng.Instance = RNG;
	HAL_RNG_Init(&hrng);

}


uint8_t RNG_GenRandNum(){

	HAL_RNG_GenerateRandomNumber(&hrng, &randNum);

	uint8_t rn = 9;

	while(rn == 9){
		rn = (&randNum >> 29) + 2;
	}

	return rn;

}

