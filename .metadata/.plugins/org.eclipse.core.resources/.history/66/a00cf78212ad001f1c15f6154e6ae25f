#ifndef INC_TETRIS_LOGIC_H_
#define INC_TETRIS_LOGIC_H_

#include <stdio.h>
#include <stdbool.h>

#include "LCD_Driver.h"


#define O 0
#define I 1
#define S 2
#define Z 3
#define J 4
#define L 5
#define T 6

#define MAXWIDTH  3
#define IBLOCK_MW 4
#define OBLOCK_MW 2

#define START_POSITION 9




typedef struct {

	uint8_t Name;

	bool Structure[4][4];

	uint16_t Color;

	uint8_t MaxWidth;

	uint8_t Position;

} Tetrominoe ;



Tetrominoe BuildTetrominoe(uint8_t c);




#endif /* INC_TETRIS_LOGIC_H_ */
